{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1> {{ 'Registration'|trans }}</h1>
        </div>
        <div class="col-3"></div>
    </div>

    {{ form_start(registrationForm) }}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            {{ form_row(registrationForm.username) }}
        </div>
        <div class="col-3"></div>
    </div>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        <div class="col-3"></div>
    </div>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            {{ form_row(registrationForm.agreeTerms, {
                label: 'agreeTerms'
            }) }}
        </div>
        <div class="col-3"></div>
    </div>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <button type="submit" class="btn btn-lg btn-primary"> {{ 'Register'|trans }}</button>
            <a class="btn btn-lg btn-secondary" href="./">
                {{ 'Log In'|trans }}
            </a>
        </div>
        <div class="col-3"></div>
    </div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
